<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/GoodCar_Img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/aa3" />

        <TextView
            android:id="@+id/GoodsCar_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/GoodCar_Img"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/GoodsRal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/GoodCar_Img">

            <TextView
                android:id="@+id/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="价格:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/Text"
                android:text="¥"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/GoodsCar_Pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/Text2"
                android:text="0.0"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/GoodsCar_Add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/add1" />

            <EditText
                android:id="@+id/GoodCar_Num"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="1" />

            <ImageView
                android:id="@+id/GoodsCar_jian"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/GoodCar_Num"
                android:src="@mipmap/jian0" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_below="@id/GoodsRal"
            android:layout_marginTop="5dp"
            android:background="#e5e4c9" />
    </RelativeLayout>

    <TextView
        android:id="@+id/delete"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#FFFF0000"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="删除"
        android:textColor="@android:color/white" />

</LinearLayout>