<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zhu_ce2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.boohee.boohee.View.ZhuCe2Activity">

    <RelativeLayout
        android:id="@+id/detailsll"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/zhuce_Back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="back">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_arrow_back_black" />
        </RelativeLayout>
        <TextView
            android:id="@+id/GridView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/zhuce_Back"
            android:text="完善资料1/2"
            android:textColor="#000"
            android:textSize="18dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/view9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textSize="15dp"
        android:layout_below="@id/detailsll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="250dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view9"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@mipmap/a17"
        >
        <LinearLayout
            android:id="@+id/Nan_Lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="#fff"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/Nan_Img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background= "@mipmap/a6q"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/Nan_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/MainColorChecked"
                android:visibility="gone"
                android:text="男"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/NV_Lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/NV_Img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/a6n"
                />
            <TextView
                android:id="@+id/NV_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="#999"
                />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="90dp"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="身高:"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_birth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/birthruler"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/two"
            android:background="@drawable/rules"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/ruler_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/Users_ZhuCe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#7CC790"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7CC790"
                android:clickable="true"
                android:onClick="next"
                android:gravity="center"
                android:text="下一步" />

        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>
