<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/partner_sift_userphoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:onClick="onclick"
                />

            <TextView
                android:id="@+id/partner_sift_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/partner_sift_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="11-19 15:47"
                    android:textColor="#7d7d7d"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/partner_sift_maintext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="哇哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈啊，这就是一条测试信息，哇哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"

            />

        <GridLayout
            android:id="@+id/partner_sift_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#e5e4e6"
            android:layout_alignParentBottom="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/item_jewel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick">

                <ImageView
                    android:id="@+id/partner_sift_support"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/a3o"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/partner_sift_support_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#7d7d7d"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="70dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick">

                <ImageView
                    android:id="@+id/partner_sift_comment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/a3j"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/partner_sift_comment_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#7d7d7d"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="70dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_anymore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick">

                <ImageView
                    android:id="@+id/partner_sift_more"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/abh"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    />



            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>
