<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boohee.boohee.View.Shop_View.GoodsCar_Activity">

    <RelativeLayout
        android:id="@+id/GoodsCar_Back"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/GridView_Back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_arrow_back_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/GridView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/GridView_Back"
            android:text="购物车"
            android:textColor="#000"
            android:textSize="18dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:layout_below="@id/GoodsCar_Back"
        android:layout_marginTop="5dp"
        android:background="#e5e4c9" />

    <ListView
        android:id="@+id/GoodCar_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/view"
        android:layout_below="@id/view"
        android:layout_marginBottom="65dp" />

    <RelativeLayout
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="总金额:"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/text"
            android:text="¥"
            android:textColor="#C81A2B"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/GoodsAll_Pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/money"
            android:text="0"
            android:textColor="#C81A2B"
            android:textSize="20dp" />

        <android.support.v7.widget.CardView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/GoodsCar_JiSuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C81A2B"
                android:text="结算"
                android:textColor="#fff" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>

